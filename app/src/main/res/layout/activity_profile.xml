<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjaActivity.ProfileActivity"
    android:background="@drawable/bg_profile">

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />


    <TextView
        android:id="@+id/txt_username_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_setting_profile"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="303dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_username_profile"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="About"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/verdana"
            android:elevation="0dp"
            android:id="@+id/btn_about_profile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Privacy and Policy"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/verdana"
            android:elevation="0dp"
            android:id="@+id/btn_policy_profile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="FAQ"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginTop="119dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/verdana"
            android:elevation="0dp"
            android:id="@+id/btn_faq_profile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Contact US"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginTop="179dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/verdana"
            android:elevation="0dp"
            android:id="@+id/btn_contact_profile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginTop="238dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/verdana"
            android:elevation="0dp"
            android:id="@+id/btn_changepass_profile"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/cardview_setting_profile"
        android:layout_alignStart="@+id/cardview_setting_profile"
        android:layout_alignEnd="@+id/cardview_setting_profile"
        android:layout_marginTop="30dp"
        android:text="Logout"
        android:id="@+id/btn_logout_profile"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:elevation="10dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/color_navbar">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53"
            app:srcCompat="@drawable/ic_home" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52"
            app:srcCompat="@drawable/ic_feeds" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53999996"
            app:srcCompat="@drawable/ic_bookmark_nav" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="52dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>